<% provide :title, t(".title") %>
<h1> <%= t ".title" %> </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url: signup_path do |f| %>
    <%= render "shared/error_messages" %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, t(".password") %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, t(".confirm") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.label :gender, t(".gender") %>
    <%= f.select(:gender, [[t(".male"), "male"], [t(".female"), "female"], [t(".other"), "other"]]) %>

    <%= f.label :date_of_birth, t(".date_of_birth") %>
    <%= date_field(:user, :date_of_birth) %>


    <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
